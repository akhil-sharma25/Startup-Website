<% include ../partials/header.ejs %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
			Create New CampGround
		</h1>
		<form action="/campground" method="POST">
			<div style="width:30% ; margin: 25px auto">
				<div class="form-group" >
				<input type="text" placeholder="name" name="name" class="form-control">
				</div>
				<div class="form-group" >
				<input type="text" placeholder="price" name="price" min="0.0.1" step="0.01" class="form-control">
				</div>
				<div class="form-group">
					<input type="text" placeholder="image url" name="image" class="form-control">
				</div>
				<div class="form-group">
					<input type="text" placeholder="description" name="discription" class="form-control">
				</div>
				<div class="form-group">
    				<input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
				</div>
				<button class="btn btn-large btn-primary" style="width:100%">
				Submit
				</button>
				<div style="padding-top:5px">
					<a href="/campground">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
<% include ../partials/footer.ejs %>