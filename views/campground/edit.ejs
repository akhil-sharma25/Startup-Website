<% include ../partials/header.ejs %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
			Edit <%= campground.name %>
		</h1>
		<form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
			<div style="width:30% ; margin: 25px auto">
				<div class="form-group">
				<input type="text"  value="<%=campground.name %>" name="campground[name]"class="form-control">
				</div>
				<div class="form-group">
				<input type="text"  value="<%=campground.price %>" name="campground[price]"  min="0.0.1" step="0.01" class="form-control">
				</div>
				<div class="form-group">
					<input type="text" value="<%=campground.image %>" name="campground[image]" class="form-control">
				</div>
				<div class="form-group">
					<input type="text" value="<%=campground.discription %>" name="campground[discription]" class="form-control">
				</div>
				<button class="btn btn-large btn-primary" style="width:100%">
				Submit
				</button>
				<div class="form-group">
   					<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
				</div>
				<div style="padding-top:5px">
					<a href="/campground">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
<% include ../partials/footer.ejs %>