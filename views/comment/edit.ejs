<% include ../partials/header.ejs %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
			Edit Comment
		</h1>
		<form action="/campground/<%= campground_id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
			<div style="width:30% ; margin: 25px auto">
				<div class="form-group">
					<input type="text" value="<%=comment.text %>" name="comment[text]" class="form-control">
				</div>
				<button class="btn btn-large btn-primary" style="width:100%">
				Submit
				</button>
				<div style="padding-top:5px">
					<a href="/campground">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
<% include ../partials/footer.ejs %>